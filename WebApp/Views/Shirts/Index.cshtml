@model List<Shirt>


<h3>Shirts</h3>
<br />
<div class="text-danger" asp-validation-summary="All"></div>


@if (Model != null)
{
    <table class="table table-striped">
        <thead>
        <tr>
            <td>Brand</td>
            <td>Gender</td>
            <td>Color</td>
            <td>Size</td>
            <td>Price</td>
            <td></td>
            <td></td>
        </tr>
        </thead>
        <tbody>
        @foreach (var shirt in Model)
        {
            <tr>
                <td>@shirt.Brand</td>
                <td>@shirt.Gender</td>
                <td>@shirt.Color</td>
                <td>@shirt.Size</td>
                <td>@(shirt.Price.HasValue?shirt.Price.Value.ToString("C") :"")</td>
                <td><a class="btn btn-link" asp-controller="Shirts" asp-action="UpdateShirt" asp-route-shirtId="@shirt.ShirtId">Edit</a></td>
                <td><a class="btn btn-link" asp-controller="Shirts" asp-action="DeleteShirt" asp-route-shirtId="@shirt.ShirtId">Delete</a></td>
            </tr>
        }
        </tbody>
    </table>
}

<br/>
<a class="btn btn-primary" asp-controller="shirts" asp-action="createshirt">Create</a>